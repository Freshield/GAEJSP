<head lang="en">
	<meta charset="UTF-8">
	<title>Test4</title>
	<script type="text/javascript" src="d3/d3.js"></script>
	<script type="text/javascript">

	</script>
	<style type="text/css">
	body{
	height: 100%;
	}
	.axis path,
	.axis line {
	fill: none;
	stroke: black;
	shape-rendering: crispEdges;
	}
	.axis text {
	font-family: sans-serif;
	font-size: 11px;
	}
	</style>
